
<div id="tag">
  <h2>标签：<%=page.tag%></h2>
  <% page.posts.each(function(article) { %>
           <% if (article.link) { %>
    <a href="<%= url_for(article.link) %>" target="_blank" class="tag-item">
        <span>
          <%=article.title || 'No Title'%>
        </span> 
      <time datetime="<%=date_xml(article.date)%>">
        <%=date(article.date)%>
      </time>
    </a>
    <% }else { %>
        <a href="<%=url_for(article.path)%>" taget="_blank" class="tag-item">
        <span>
          <%=article.title || 'No Title'%>
        </span>
        <time datetime="<%=date_xml(article.date)%>">
          <%=date(article.date)%>
        </time>
        </a>
      <% } %>
  <% }); %>
  <%　if(page.total >1 ){ %>
<%- partial('_partials/my_paginator') %>
<% } %>
</div>

